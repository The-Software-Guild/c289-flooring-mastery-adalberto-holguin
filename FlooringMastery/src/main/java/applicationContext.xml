<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
                http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="io" class = "com.sg.assessment.ui.UserIOConsoleImpl" />
    <bean id="dao" class="com.sg.assessment.dao.FlooringMasterDaoFileImpl" />

    <bean id="view" class="com.sg.assessment.ui.FlooringMasteryView">
        <constructor-arg ref="io" />
    </bean>

    <bean id="service" class="com.sg.assessment.service.FlooringMasteryService">
        <constructor-arg ref="io" />
    </bean>

    <bean id="controller" class="com.sg.assessment.controller.FlooringMasteryController" >
        <constructor-arg ref="service" />
        <constructor-arg ref="view" />
    </bean>


</beans>

